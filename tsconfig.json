{
  "include": [
    "**/*.js",
    "**/*.d.ts"
  ],
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "checkJs": true,
    "declaration": true,
    "lib": ["ES2022"],
    "moduleResolution": "nodenext",
    "module": "NodeNext",
    "noEmit": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": false
  }
}
